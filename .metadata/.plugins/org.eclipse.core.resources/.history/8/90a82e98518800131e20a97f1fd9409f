//makes blocks fall, clears lines, and checks whether there is "fusion"
public class Physics {
	
	public static void drop() {
		for (int x = 0; x < Main.gamewidth; x++) {
			for (int y = 0; y < Main.gameheight; y++) {
				if (Grid.grid[x][Main.gameheight - y].hastet && Grid.grid[x][Main.gameheight - y].active) {
					Grid.grid[x][Main.gameheight - y].hastet = false;
					Grid.grid[x][Main.gameheight - y - 1].hastet = true;
				}
			}
		}
	}
}
