import java.awt.Color;
import java.awt.Graphics;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JComponent;


public class Display extends JComponent{
	BufferedImage background;
	
	//colors picked from http://www.w3schools.com/tags/ref_colorpicker.asp
	//colors are named [tetrimo type] + ["" or "D"]
	//dark colors are 3 levels darker
	private Color I = new Color(0x00cfcf);
	private Color ID = new Color(0x009191);
	private Color J = new Color(0x297acc);
	private Color JD = new Color(0x1D558F);
	private Color L = new Color(0xff8000);
	private Color LD = new Color(0xb25a00);
	private Color O = new Color(0xfbf579);
	private Color OD = new Color(0xb0ac55);
	private Color S = new Color(0x80db70);
	private Color SD = new Color(0x4e994e);
	private Color T = new Color(0xad44d6);
	private Color TD = new Color(0x792496);
	private Color Z = new Color(0xf94e4e);
	private Color ZD = new Color(0xae3737);
	
	
	public Display() {
		//load image
		try {
			background = ImageIO.read(new File("Board.png"));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public void init() {
		setSize(Main.imgwidth, Main.imgheight);
		repaint();
	}
	
	public void paintComponent(Graphics g) {
		g.drawImage(background, 0, 0, null);
		paintGame(g);
	}
	
	public void paintGame(Graphics g) {
		for (int w = 0; w < Main.gamewidth; w++) {
			for (int h = 0; h < Main.gameheight; h++) {
				paintTetrimo(g, w, h);
			}
		}
	}
	
	public void paintTetrimo(Graphics g, int x, int y) {
		
	}
}